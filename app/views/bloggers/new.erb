<h1>Create a Bloggie</h1>
<hr>

<% if @blogger.errors.any? %>
    <% @blogger.errors.full_messages.each do |error_msg| %>
        <li style="color:red"><%= error_msg %></li>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    Name: <%= f.text_field :name %><br><br>
    Bio: <%= f.text_area :bio %><br><br>
    Age: <%= f.number_field :age %><br><br>
    <%= f.submit %><br><br>
<% end %> 
